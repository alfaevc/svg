<h1>{{ title }}</h1>
{{# if success }}
    <section class="success">
        <xmp>{{ graph }}</xmp>
    </section>
{{ else }}
    {{# if errors }}
        <section class="errors">
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form action="/submit" method = "post">
        <div class="input">
            <label for="xcords">X_coordinates</label>
            <input type="text" id="xcords" name="xcords">
        </div>
        <div class="input">
            <label for="ycords">Y_coordinates</label>
            <input type="text" id="ycords" name="ycords">
        </div>
        <div class="input">
            <label for="svgtitle">SVG_title</label>
            <input type="text" id="svgtitle" name="svgtitle">
        </div>
        <button type="submit">create graph</button>
    </form>
{{/if}}
